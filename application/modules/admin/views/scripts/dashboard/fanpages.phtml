<h2>Fanpages</h2>
<table class="table-striped">
	<thead>
		<th>Name</th>
		<th>Category</th>
		<th></th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
	<?php foreach($this->pages as $page): ?>
		<?php
			$url = 'https://www.facebook.com/pages/' . str_replace(' ', '-', $page['fanpage_name']) . '/' . $page['fanpage_id'];
		?>
		<tr id="<?= $page['fanpage_id'] ?>">
			<td class="name"><a href="<?= $url ?>"><img src="http://graph.facebook.com/<?=  $page['fanpage_id'] ?>/picture"></a><a href="<?= $url ?>"><?= $page['fanpage_name'] ?></a></td>
			<td class="category">
				<?php if ( !empty($page['category']) ): ?>
					<span><?= $page['category'] ?></span>
				<?php endif; ?>
			</td>
			<td class="status">
				<?php if ( !empty($page['active']) ): ?>
